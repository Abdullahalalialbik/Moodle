<script>
    function deleteRow(button) {
        var row = button.parentNode.parentNode;
        var popup = document.getElementById("popup");
        popup.style.display = "block";
        setTimeout(function() {
            popup.style.display = "none";
            row.parentNode.removeChild(row);
        }, 2000);
    }
</script>
